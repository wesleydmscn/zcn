{
  "name": "zcn",
  "version": "1.0.8",
  "description": "A set of ready-made schemas extended for Zod.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --out-dir dist",
    "prettier": "prettier . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleydmscn/zcn.git"
  },
  "keywords": [
    "schema-validation",
    "type-inference",
    "runtime-validation",
    "zod",
    "zcn",
    "typescript"
  ],
  "author": "Wesley Damasceno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wesleydmscn/zcn/issues"
  },
  "homepage": "https://github.com/wesleydmscn/zcn#readme",
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
